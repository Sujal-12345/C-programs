#include<stdio.h>
#include<math.h>

int main()
{
    float a,b,c,average;
    printf("Enter the numbers: ");
    scanf("%f %f %f", &a,&b,&c);
    
    average = a+b+c/3;
    printf("Average of three numbers: %0.2f \n", average);
    printf("Round off Average of three numbers : %0.2f", round(average));
}
